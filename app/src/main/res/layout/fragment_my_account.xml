<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/theme_black">
    <include
        android:id="@+id/main_appBar"
        layout="@layout/appbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/my_account_main_title"
        app:layout_constraintTop_toBottomOf="@+id/main_appBar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        style="@style/title_red_center20_text"
        android:text="@string/my_account_string"/>

<!--    <androidx.appcompat.widget.AppCompatTextView-->
<!--        android:layout_width="100dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        android:text="@string/total_string"-->
<!--        style="@style/style_12_book"-->
<!--        android:background="@drawable/red_background_filled"-->
<!--        android:drawableStart="@drawable/ic_baseline_delete_24"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/my_account_main_title"/>-->

    <LinearLayout
        android:id="@+id/account_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_account_main_title">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/my_account_tab_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            style="@style/style_12_book"
            android:background="@drawable/ic_button_red_tab"
            android:text="@string/my_account_string"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/my_order_tab_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            style="@style/style_12_book"
            android:background="@drawable/ic_button_black_tab"
            android:text="@string/my_orders_string"/>

    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_main_tab"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_5"
        app:layout_constraintTop_toBottomOf="@id/account_tabs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/ic_tab">
        <TextView
            android:id="@+id/edit_profile_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_profile_string"
            style="@style/style_16_bold_red"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_orders_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_5"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintTop_toBottomOf="@+id/edit_profile_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="@dimen/dp_5"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:id="@+id/no_orders_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_orders_string"
                style="@style/style_16_bold_red"
                android:visibility="gone"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/order_list_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbarSize="@dimen/dp_5"
            android:layout_margin="@dimen/dp_30"
            android:scrollIndicators="end"
            android:scrollbars="vertical"
            android:layout_marginTop="@dimen/dp_5"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintTop_toBottomOf="@+id/edit_profile_title"            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fillViewport="true">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/my_account_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">



                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_name_ET"
                    style="@style/style_16_book_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_30"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:hint="@string/name_string"
                    android:inputType="textCapWords"
                    android:clickable="false"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:nextFocusDown="@id/edit_email_ET"
                    />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_email_ET"
                    style="@style/style_16_book_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_30"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:hint="@string/email_string"
                    android:clickable="false"
                    android:inputType="textEmailAddress"
                    app:layout_constraintTop_toBottomOf="@+id/edit_name_ET"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:nextFocusDown="@id/edit_contact_ET"
                    />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_contact_ET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_30"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:hint="@string/enter_mobile_no_string"
                    android:inputType="phone"
                    android:clickable="false"
                    style="@style/style_16_book_edit_text"
                    app:layout_constraintTop_toBottomOf="@+id/edit_email_ET"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_address1_ET"
                    style="@style/style_16_book_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:hint="@string/address1_string"
                    android:inputType="textCapWords"
                    android:nextFocusDown="@id/address2_ET"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_contact_ET"
                    />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_address2_ET"
                    style="@style/style_16_book_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:hint="@string/address2_string"
                    android:inputType="textCapWords"
                    android:nextFocusDown="@id/register_email_ET"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_address1_ET"
                    />

                <Spinner
                    android:id="@+id/StateSpinner"
                    style="@style/mySpinnerItemStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:padding="@dimen/dp_5"
                    android:spinnerMode="dialog"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_address2_ET"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/stateDisplay"
                    style="@style/style_16_book"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_30"
                    tools:hint="@string/pincode_string"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_address2_ET"
                    />

                <Spinner
                    android:id="@+id/CitySpinner"
                    style="@style/mySpinnerItemStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:padding="@dimen/dp_5"
                    android:spinnerMode="dialog"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/StateSpinner"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/cityDisplay"
                    style="@style/style_16_book"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_30"
                    tools:hint="@string/pincode_string"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/StateSpinner"
                    />
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_pincode_ET"
                    style="@style/style_16_book_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:hint="@string/pincode_string"
                    android:inputType="phone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/CitySpinner"
                    />

                <Button
                    android:id="@+id/update_profile_btn"
                    style="@style/style_12_center"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/ic_buy_now_button"
                    android:text="@string/proceed_string"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintHeight_percent=".13"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_pincode_ET"
                    app:layout_constraintWidth_default="percent"
                    app:layout_constraintWidth_percent=".5"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
