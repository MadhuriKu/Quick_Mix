<!--                    android:id="@+id/tncCheck"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginEnd="@dimen/dp_30"-->
<!--                    style="@style/style_16_bold"-->
<!--                    tools:text="100"/>-->
<!--            </LinearLayout>-->



            <Button
                android:id="@+id/checkout_order"
                app:layout_constraintTop_toBottomOf="@+id/totalAmountView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dp_20"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent=".13"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent=".7"
                android:background="@drawable/ic_buy_now_button"
                android:text="@string/proceed_to_payment_string"/>
            <Button
                android:id="@+id/checkout_cod_order"
                app:layout_constraintTop_toBottomOf="@+id/checkout_order"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent=".13"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent=".7"
                android:background="@drawable/ic_buy_now_button"
                android:text="@string/cash_on_delivery_string"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>