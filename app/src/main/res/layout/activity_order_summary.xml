<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_black"
    tools:context=".fragment.ProductHighlightFragment">

    <include
        android:id="@+id/main_appBar"
        layout="@layout/appbar_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/main_appBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/sc_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_30"
                style="@style/title_red_20_text"
                android:text="@string/order_summary_string"/>
            <TextView
                android:id="@+id/order_summary_text1"
                app:layout_constraintTop_toBottomOf="@+id/sc_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/style_16_bold"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginStart="@dimen/dp_30"
                android:text="Name"/>
            <TextView
                android:id="@+id/order_summary_text2"
                app:layout_constraintTop_toBottomOf="@+id/order_summary_text1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/style_12_book"
                android:layout_marginStart="@dimen/dp_30"
                android:text="987654321"/>
            <TextView
                android:id="@+id/order_summary_text3_title"
                app:layout_constraintTop_toBottomOf="@+id/order_summary_text2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/style_16_bold"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_30"
                android:text="@string/address_string"/>
            <TextView
                android:id="@+id/order_summary_text3"
                app:layout_constraintTop_toBottomOf="@+id/order_summary_text3_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/style_12_book"
                android:layout_marginStart="@dimen/dp_30"
                android:text="address"/>
            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                app:layout_constraintTop_toBottomOf="@+id/order_summary_text3"
                />
            <TextView
                android:id="@+id/sc_total_count"
                app:layout_constraintTop_toBottomOf="@+id/order_summary_text3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/style_16_bold"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_30"
                android:text="Total :"/>


            <TextView
                android:id="@+id/product_header"
                app:layout_constraintTop_toBottomOf="@+id/sc_total_count"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/about_main_desc_bold__text"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginStart="@dimen/dp_30"
                android:text="@string/products_string"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sc_product_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_10"
                android:nestedScrollingEnabled="true"
                android:scrollbars="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_header"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/add_coupon_code"
                style="@style/red_style_12_center"
                app:layout_constraintTop_toBottomOf="@+id/sc_product_rv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/subtotalMainView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:visibility="gone"
                android:background="@drawable/red_background_outline"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_30"
                android:text="@string/add_coupon_code_string"/>

            <LinearLayout
                android:id="@+id/subtotalMainView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/add_coupon_code"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="vertical">

            <LinearLayout
                android:id="@+id/subtotalView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/add_coupon_code"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/sc_total_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_30"
                    style="@style/style_12_book_grey"
                    android:text="@string/gross_amount_string"/>
                <TextView
                    android:id="@+id/sc_total_amt_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:gravity="end"
                    style="@style/style_12_book_grey"
                    tools:text="100"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/couponCodeView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/subtotalView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/coupon_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_30"
                    style="@style/style_12_book_grey"
                    android:text="@string/coupon_code_string"/>
                <TextView
                    android:id="@+id/coupon_code_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:gravity="end"
                    style="@style/style_12_book_grey"
                    tools:text="100"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/couponCodDiscountView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/couponCodeView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/coupon_discount_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_30"
                    style="@style/style_12_book_grey"
                    android:text="@string/discount_amount_string"/>
                <TextView
                    android:id="@+id/coupon_discount_amt_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:gravity="end"
                    style="@style/style_12_book_grey"
                    tools:text="100"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/CGSTView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/couponCodDiscountView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/cgst_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_30"
                    style="@style/style_12_book_grey"
                    android:text="@string/cgst_string"/>
                <TextView
                    android:id="@+id/cgst_amt_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:gravity="end"
                    style="@style/style_12_book_grey"
                    tools:text="100"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/SGSTView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/CGSTView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/sgst_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_30"
                    style="@style/style_12_book_grey"
                    android:text="@string/sgst_string"/>
                <TextView
                    android:id="@+id/sgst_amt_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:gravity="end"
                    style="@style/style_12_book_grey"
                    tools:text="100"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/osIGSTView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/SGSTView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/igst_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_30"
                    style="@style/style_12_book_grey"
                    android:text="@string/igst_string"/>
                <TextView
                    android:id="@+id/os_igst_amt_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:gravity="end"
                    style="@style/style_12_book_grey"
                    tools:text="100"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/gstView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/SGSTView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/gst_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_30"
                    style="@style/style_12_book_grey"
                    android:text="@string/gst_price_string"/>
                <TextView
                    android:id="@+id/gst_amt_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:gravity="end"
                    style="@style/style_12_book_grey"
                    tools:text="100"/>
            </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                app:layout_constraintTop_toBottomOf="@+id/subtotalMainView"
                />

            <LinearLayout
                android:id="@+id/totalAmountView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/line4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/total_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_30"
                    style="@style/style_16_bold"
                    android:text="@string/total_string"/>
                <TextView
                    android:id="@+id/total_amt_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:gravity="end"
                    style="@style/style_16_bold"
                    tools:text="100"/>
            </LinearLayout>


<!--            <LinearLayout-->
<!--                android:id="@+id/tnclayout"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                app:layout_constraintTop_toBottomOf="@+id/totalAmountView"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
