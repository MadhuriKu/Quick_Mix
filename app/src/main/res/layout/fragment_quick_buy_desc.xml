<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_black"
    android:clickable="false"
    tools:context=".fragment.QuickBuyDescFragment">

    <include
        android:id="@+id/main_appBar"
        layout="@layout/appbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/about_main_title"
        app:layout_constraintTop_toBottomOf="@+id/main_appBar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_30"
        style="@style/about_main_title_text"
        android:text="@string/quick_mix_string"/>
    <TextView
        android:id="@+id/about_main_subtitle"
        app:layout_constraintTop_toBottomOf="@+id/about_main_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/style_12_medium"
        android:layout_marginStart="@dimen/dp_30"
        android:text="@string/quick_mix_desc_string"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/quick_buy_desc_price"
        app:layout_constraintTop_toBottomOf="@+id/main_appBar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".08"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".4"
        style="@style/style_white_12_bold"
        android:background="@drawable/ic_black_button_background"
        android:text="@string/buy_now_string"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/quick_buy_desc_main_iv"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/about_main_subtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent=".4"
            app:layout_constraintVertical_bias="0.5"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/ic_tab">
            <ImageView
                android:id="@+id/quick_buy_desc_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_30"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent=".8"
                app:srcCompat="@drawable/product"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/quick_buy_desc_count_view"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/quick_buy_desc_main_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/sc_minus_btn"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            style="@style/style_white_12_bold"
            android:padding="@dimen/dp_10"
            android:background="@drawable/black_background_square_btn"
            android:text="-"/>
        <TextView
            android:id="@+id/sc_count_txt"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            style="@style/style_white_12_bold"
            android:padding="@dimen/dp_10"
            android:text="0"/>
        <TextView
            android:id="@+id/sc_plus_btn"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            style="@style/style_white_12_bold"
            android:padding="@dimen/dp_10"
            android:background="@drawable/black_background_square_btn"
            android:text="+"/>
    </LinearLayout>

    <TextView
        android:id="@+id/quick_buy_desc_description_title"
        app:layout_constraintTop_toBottomOf="@+id/quick_buy_desc_count_view"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/style_12_book"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_50"
        android:text="@string/container_string"/>
    <TextView
        android:id="@+id/quick_buy_desc_description"
        app:layout_constraintTop_toBottomOf="@+id/quick_buy_desc_description_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/style_12_book"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_marginStart="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_50"
        android:text="@string/container_string"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/quick_buy_desc_add_to_cart_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_50"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".08"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".4"
        style="@style/style_12_book"
        android:background="@drawable/ic_black_button_background"
        app:layout_constraintTop_toBottomOf="@+id/quick_buy_desc_description"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/add_to_cart_string"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/quick_buy_desc_buy_now_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".08"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".4"
        style="@style/style_12_book"
        android:background="@drawable/ic_buy_now_button"
        app:layout_constraintTop_toBottomOf="@+id/quick_buy_desc_description"
        app:layout_constraintStart_toEndOf="@+id/quick_buy_desc_add_to_cart_btn"
        android:text="@string/buy_now_string"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/quick_buy_desc_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

