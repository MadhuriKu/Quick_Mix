<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowSoftInputMode="adjustPan"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_black">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/midway_horizontal_guideline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bottom_horizontal_guideline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.85"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/midway_vertical_guideline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/center_vertical_guideline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/drawer_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="openPage"
            android:src="@drawable/drawer_icon"
            android:layout_marginTop="@dimen/text_10_dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="OnClick" />
        <LinearLayout
            android:id="@+id/play_video_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/text_10_dp"
            android:layout_marginEnd="10dp"
            android:elevation="@dimen/dp_40"
            android:onClick="openPage"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                style="@style/style_white_12_bold"
                android:text="@string/play_vid_string"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/play_btn"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@drawable/play_icon_white"
                />
        </LinearLayout>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageDish"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/midway_horizontal_guideline"
            app:layout_constraintStart_toStartOf="@id/midway_vertical_guideline"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent=".42"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".9"
            app:srcCompat="@drawable/ice_cream" />

        <LinearLayout
            android:id="@+id/auto_clean_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintCircle="@+id/imageDish"
            app:layout_constraintCircleRadius="220dp"
            app:layout_constraintCircleAngle="165"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/auto_clean_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:onClick="rotateDishAnim"
                android:src="@drawable/ic_auto_clean_icon"
                android:background="@drawable/main_black_btn_bg"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/round_image_text"
                android:text="@string/autoclean_string"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sauces_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintCircle="@+id/imageDish"
            app:layout_constraintCircleRadius="220dp"
            app:layout_constraintCircleAngle="190"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/sauces_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:onClick="rotateDishAnim"
                android:src="@drawable/ic_sauces_icon"
                android:tint="@color/theme_grey"
                android:background="@drawable/main_black_btn_bg"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/round_image_text"
                android:text="@string/sauces_string"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/soups_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintCircle="@+id/imageDish"
            app:layout_constraintCircleRadius="220dp"
            app:layout_constraintCircleAngle="215"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/soups_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:onClick="rotateDishAnim"
                android:src="@drawable/ic_hot_soup_icon"
                android:background="@drawable/main_black_btn_bg"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/round_image_text"
                android:text="@string/soups_string"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ice_cream_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintCircle="@+id/imageDish"
            app:layout_constraintCircleRadius="220dp"
            app:layout_constraintCircleAngle="240"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ice_cream_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:onClick="rotateDishAnim"
                android:src="@drawable/ic_ice_cream_icon"
                android:background="@drawable/main_black_btn_bg"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/round_image_text"
                android:text="@string/ice_cream_string"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/smoothie_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintCircle="@+id/imageDish"
            app:layout_constraintCircleRadius="220dp"
            app:layout_constraintCircleAngle="265"
            android:layout_marginBottom="@dimen/text_10_dp"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/smoothie_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:onClick="rotateDishAnim"
                android:src="@drawable/ic_smoothie_icon"
                android:background="@drawable/main_black_btn_bg"
                tools:ignore="OnClick" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/round_image_text"
                android:text="@string/smoothie_string"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/try_recipes"
            android:orientation="vertical"
            android:onClick="openPage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/mixi_image"
            app:layout_constraintTop_toTopOf="@+id/mixi_image"
            app:layout_constraintEnd_toStartOf="@+id/center_vertical_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent=".07"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.3">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textAllCaps="true"
                android:gravity="center_vertical|center_horizontal"
                style="@style/style_12_bold_grey"
                app:layout_constraintBottom_toBottomOf="@+id/mixi_image"
                app:layout_constraintTop_toTopOf="@+id/mixi_image"
                android:text="@string/checkout_string"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textAllCaps="true"
                android:gravity="center_vertical|center_horizontal"
                style="@style/style_12_bold_red"
                app:layout_constraintBottom_toBottomOf="@+id/mixi_image"
                app:layout_constraintTop_toTopOf="@+id/mixi_image"
                android:text="@string/recipe_string"
                />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mixi_image"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/sauces_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent=".30"
            app:layout_constraintStart_toStartOf="parent"
            android:elevation="@dimen/dp_8"
            app:srcCompat="@drawable/product" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/live_demo_play_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="openPage"
            app:textAllCaps="true"
            android:gravity="center_vertical|center_horizontal"
            style="@style/style_12_bold_red"
            app:layout_constraintBottom_toBottomOf="@+id/mixi_image"
            app:layout_constraintTop_toTopOf="@+id/mixi_image"
            app:layout_constraintStart_toStartOf="@+id/center_vertical_guideline"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent=".06"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.4"
            android:text="@string/live_demo_title2"
            android:background="@drawable/red_background_outline"
            app:drawableEndCompat="@drawable/ic_baseline_play_arrow_24"
            android:paddingEnd="@dimen/dp_15"
            android:paddingStart="@dimen/dp_20"
             />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bottom_textView1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/mixi_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent=".07"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="@dimen/dp_10"
            app:layout_constraintBottom_toBottomOf="@+id/bottom_horizontal_guideline"
            android:src="@drawable/masterchef_bottom"
            />
        <!--    <FrameLayout-->
        <!--        android:id="@+id/fragment_container_view_tag"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="match_parent"-->
        <!--        app:layout_anchorGravity="center"-->
        <!--        app:layout_behavior="@string/appbar_scrolling_view_behavior"-->
        <!--        app:layout_constraintEnd_toEndOf="parent"-->
        <!--        app:layout_constraintStart_toStartOf="parent"-->
        <!--        app:layout_constraintTop_toTopOf="parent"-->
        <!--        android:layout_marginBottom="@dimen/dimen_10"-->
        <!--        app:layout_constraintBottom_toBottomOf="@+id/bottom_horizontal_guideline"-->
        <!--        app:layout_constraintVertical_bias="0.0" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>




<!--    <androidx.fragment.app.FragmentContainerView-->
<!--        android:id="@+id/nav_host_fragment"-->
