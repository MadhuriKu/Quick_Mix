<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.orpat.quickmix">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuickMix">
        <activity android:name=".activity.OrderSummaryActivity"
            android:theme="@style/Theme.QuickMix.NoActionBar"/>
        <activity
            android:name=".activity.DiscountCodeActivity"
            android:theme="@style/Theme.QuickMix.NoActionBar" />
        <activity
            android:name=".activity.FailureActivity"
            android:theme="@style/Theme.QuickMix.NoActionBar" />
        <activity
            android:name=".activity.SuccessActivity"
            android:theme="@style/Theme.QuickMix.NoActionBar" />
        <activity
            android:name=".activity.WebViewActivity"
            android:theme="@style/Theme.QuickMix.NoActionBar" />
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/Theme.QuickMix.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.TimeSlotActivity"
            android:label="@string/title_activity_time_slot"
            android:theme="@style/Theme.QuickMix.NoActionBar" />
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/Theme.QuickMix.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.ForceUpdateActivity"
            android:theme="@style/Theme.QuickMix.NoActionBar"/>
    </application>

</manifest>